

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Şifremi Unuttum Sayfası</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/LoginScriptler/Scriptler/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScriptler/Scriptler/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScriptler/Scriptler/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScriptler/Scriptler/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScriptler/Scriptler/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScriptler/Scriptler/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScriptler/Scriptler/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScriptler/Scriptler/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScriptler/Scriptler/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScriptler/Scriptler/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/LoginScriptler/Scriptler/css/main.css">
    <!--===============================================================================================-->
</head>
<body style="background-color: #666666;">

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100" style="background-color: #41435c ">
                <form method="post" class="login100-form validate-form" style="background-color: #f0f0f0">
                    <span class="login100-form-title p-b-43" style="color:blue;">
                        Şifremi Unuttum Sayfası
                    </span>


                    <div class="wrap-input100 validate-input" style="border:3px solid black;">
                        <input class="input100" type="text" name="Email">
                        <span class="focus-input100"></span>
                        <span class="label-input100" style="color:black;">E-Mail Adresi</span>
                    </div>





                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            ŞİFREYİ SIFIRLA
                        </button>
                    </div>

                    <div class="container-login100-form-btn">

                        @if (ViewBag.hata != null)
                        {
                            <p class="text-danger">@ViewBag.hata</p>
                        }
                    </div>





                </form>

                <div class="login100-more" style="background-image: url('/LoginScriptler/Scriptler/images/resim2.png'); width:750px;height:500px;margin-top:75px;background-color:cadetblue ">
                </div>
            </div>
        </div>
    </div>





    <!--===============================================================================================-->
    <script src="~/LoginScriptler/Scriptler/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginScriptler/Scriptler/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginScriptler/Scriptler/vendor/bootstrap/js/popper.js"></script>
    <script src="~/LoginScriptler/Scriptler/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginScriptler/Scriptler/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginScriptler/Scriptler/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/LoginScriptler/Scriptler/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginScriptler/Scriptler/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="js/main.js"></script>

</body>
</html>
