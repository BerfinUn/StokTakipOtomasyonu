@model MVC_StokTakipOtomasyonu.Models.Entity.Urunler
@{
    ViewBag.Title = "SilBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Ürün Silme Sayfası</h2>
<div class="container">
    @using (Html.BeginForm("Sil", "Urunler"))
