                    <b><label>Açıklama : </label></b>
                    @Html.DisplayFor(x => x.Aciklama, new { @class = "form-control" })
                </div>

                <div>
                    <button class="btn btn-danger">Ürünü Sil</button>
                    <a href="/Urunler/Index/">Ana Sayfa</a>
                </div>

                }
            
</div>