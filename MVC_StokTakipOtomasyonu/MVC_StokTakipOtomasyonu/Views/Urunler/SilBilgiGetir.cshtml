                <div>
                    @*<b> @Html.LabelFor(x => x.SatisFiyati):</b>*@
                    <b><label>Satış Fiyatı : </label></b>
                    @Html.DisplayFor(x => x.SatisFiyati, new { @class = "form-control" })
