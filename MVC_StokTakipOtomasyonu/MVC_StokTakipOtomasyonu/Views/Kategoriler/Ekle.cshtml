@model MVC_StokTakipOtomasyonu.MyModel.MyKategoriler

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Ekleme Sayfası</h2>

<div class="container">

    <form action="/Kategoriler/Ekle2/" method="post">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, null, new { @class = "text-danger" })  @*false yerine true dersek yazı gözükmez.kategori eklemenin altında maddeler halinde*@
        <div>
            <div class="form-group">
                <label>Kategori</label>
                <input type="text" name="Kategori" class="form-control" />
                @Html.ValidationMessageFor(x => x.Kategori, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Açıklama</label>
                <textarea name="Aciklama" class="form-control"></textarea>
                @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button class="btn btn-success">Kategori Ekle</button>
            </div>
        </div>


    </form>
</div>
@section scriptdanger
{
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}