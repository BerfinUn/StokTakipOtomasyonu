                <div>
                    @*<b> @Html.LabelFor(x => x.BarkodNo):</b>*@
                    <b><label>Barkod No : </label></b>
                    @Html.DisplayFor(x => x.BarkodNo, new { @class = "form-control" })
                </div>
                <div>
